{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "streamer",
  "version": "0.3.1",
  "identifier": "com.webber.streamer",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:9420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Streamer",
        "width": 1920,
        "height": 1080,
        "transparent": true,
        "decorations": false,
        "shadow": false,
        "alwaysOnTop": true,
        "resizable": false,
        "maximized": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
